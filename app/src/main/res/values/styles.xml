<resources>

    <style name="ThemeOverlay.App.RadioButton" parent="">
        <item name="colorOnSurface">@color/black_overlay</item>
        <item name="colorSecondary">@color/colorPrimaryDark</item>
    </style>

    <style name="DialogTheme" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="AppTheme_Reverse" parent="AppTheme.NoTitle">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorPrimaryDark</item>

    </style>

    <style name="AppTheme_Reverse_Dark" parent="AppTheme.NoTitle">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/browser_actions_bg_grey</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="CalendarDateTextAppearance" parent="AppTheme.NoTitle">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/dancing_script_bold</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item>
    </style>

    <style name="actionOverflowButtonStyle" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:tint">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoTitle" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionBarTheme">@null</item>
    </style>

    <style name="myDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:popupBackground">#FDF7F7</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="myDarkToolbarStyle" parent="android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">#FDF7F7</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TextLimitStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#FDFDFD</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextLimitError" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#FDFDFD</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog" />

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:popupBackground">#FDF7F7</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#000000</item>
    </style>


</resources>
